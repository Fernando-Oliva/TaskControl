@model TaskControl.Models.Task

@{
    ViewBag.Title = "Crear una nueva tarea";
    ViewBag.NotPass = "You can't pass!!";
}

@if (Session["auth"] != null && Session["auth"].ToString() == "1")
{
<div class="content-wrapper" style="background-color:#A0A0A0; margin-bottom:10px; padding-bottom:10px;">
    <h2>Crear una nueva tarea</h2>
</div>

using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Task</legend>

        <div class="editor-label">
            @Html.Label("Tarea")
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskName)
        </div>
        <div>
            @Html.ValidationMessageFor(model => model.TaskName)
        </div>

        <br />
        <div class="editor-label">
            @Html.Label("Descripción de la Tarea")
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskDescription)
        </div>
        <div>
            @Html.ValidationMessageFor(model => model.TaskDescription)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("Asignada a")
        </div>
        <br />
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Who, (SelectList)ViewData["Users"])
            @Html.ValidationMessageFor(model => model.Who)
        </div>
        <br />
        <div class="editor-label">
            @Html.Label("Realizada")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Do)
            @Html.ValidationMessageFor(model => model.Do)
        </div>
        <br />
        <div align="center">
            <input type="submit" value="Create" />
        </div>
    </fieldset>
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
}
else
{
    <h1>@ViewBag.NotPass</h1> 
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
